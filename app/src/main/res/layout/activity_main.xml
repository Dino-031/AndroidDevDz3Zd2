<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/et_Number1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        style="@style/EditTexts"/>
    <EditText
        android:id="@+id/et_Number2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/et_Number1"
        android:layout_marginTop="20dp"
        style="@style/EditTexts"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_below="@id/et_Number2"
        android:layout_marginLeft="50dp"
        style="@style/Buttons"/>

    <Button
        android:id="@+id/btn_substract"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_toRightOf="@id/btn_add"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/et_Number2"
        style="@style/Buttons"/>

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:layout_below="@id/et_Number2"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/btn_substract"
        style="@style/Buttons"/>

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:layout_below="@id/et_Number2"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/btn_multiply"
        style="@style/Buttons"/>

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@id/btn_add"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        style="@style/ResultTextView"/>

</RelativeLayout>
