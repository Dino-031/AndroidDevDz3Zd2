<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTexts">
        <item name="android:textColor">@color/EditTextBlue</item>
        <item name="android:backgroundTint">@color/EditTextBlue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Buttons">
        <item name="android:background">@color/ButtonsBackgroundYellow</item>
        <item name="android:textColor">@color/TextPink</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="ResultTextView">
        <item name="android:textColor">@color/TextPink</item>
        <item name="android:textSize">40sp</item>
    </style>

</resources>
